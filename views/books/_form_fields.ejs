<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= book.title %>">
</div>
<div>
    <label>Author</label>
    <select name="author">
    <% authors.forEach(author => { %>
        <% if (author.id === book.author) { %>
            <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
        <% } else { %>
            <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
        <% } %> 
    <% }) %>
    </select>
</div>
<div>
    <label>Publisher</label>
    <input type="text" name="publisher" value="<%= book.publisher %>">
</div>
<div>
    <label>Publish Date</label>
    <input type="date" name="publishDate"
    value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
</div>
</div>
<div>
    <label>Cover</label>
    <input type="file" name="cover" class="filepond">
</div>
<div>    
    <label>Genre</label>
    <input type="text" name="genre" value="<%= book.genre %>">
</div>
<div>    
    <label>Description</label>
    <textarea name="description"><%= book.description %></textarea>
</div>
<div>
    <label>Price</label>
    <input type="number" min="0" max="100" step="any" name="price" value="<%= book.price %>">
</div>

